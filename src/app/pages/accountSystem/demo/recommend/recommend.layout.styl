.recommend
    padding 10px 20px
    font-size 14px
    font-family '微软雅黑'
    .form-group
        padding 0
        margin 10px 0 0 0
        .control-label
            float left
            font-weight 400
            padding-top 0
            font-size 16px
            line-height 30px
            height 30px
        .form-control
            padding 3px 12px
            border-radius 0
        select,input
            height 30px
            float left
            line-height 30px
        img
            margin-left -30px
            margin-top 5px
            float left
        span
            height 30px
            width 30px
            margin 0 5px
            float left
            line-height 30px
            text-align center
        .recommend-calendar
            float left
            width 30%
            .recommend-calendar-input
                border 1px solid #9ab26b
        .recommend-select
            float left
            width 40%
        .recommend-agency
            float left
            width 60%
        .recommend-manager
            float left
            width 35%
        .recommend-btn
            float left
            height 30px
            width 30px
            margin-left 10px
            text-align center
            line-height 20px
            border 1px solid #cccccc
    .recommend-group-one
        margin-left -30px;
    .recommend-group-two
        margin-left -60px;
    .recommend-btn-group
        text-align center
        margin-top 20px
        .btn
            padding 3px 20px
            font-size 16px
            background-color #f5f5f5
        .btn-default:focus
            outline none
            border 1px solid #e60012
            color #ffffff
            background-color #e60012
    .recommend-thead
        background #fc6969
        font-size 16px
        color #ffffff
    .table-striped
        background-color #fff2f2
        tbody
            tr:nth-of-type(odd)
                background-color #ffffff
    .table-hover
        tbody
            tr:hover
                background-color #f5f5f5
    .table
        margin-top 20px
        thead
            th
                font-weight 200
                border-bottom none
                text-align center
        tr
            td
                border-top none
                text-align center
        .btn
            background-image url("./images/recommend_unselect.png")
            background-repeat no-repeat
            background-position-x 8px
            border none
            background-size contain
        .btn-default
            background-color transparent
        .btn-default:focus
            outline none
            background-image url("./images/recommend_select.png")
        .btn:active
            box-shadow none
